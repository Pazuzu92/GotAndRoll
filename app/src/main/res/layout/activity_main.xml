<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg">

    <ImageView
        android:id="@+id/share_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/share_btn"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/money_count"/>

    <TextView
        android:id="@+id/money_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text=""
        android:layout_marginLeft="90dp"
        android:textSize="30sp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/slot_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/slot_bg"/>

    <ImageView
        android:id="@+id/spin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/slot_bg"
        android:layout_marginTop="20dp"
        android:src="@drawable/spin_btn"/>

    <LinearLayout
        android:id="@+id/main_slots"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/slot1"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_1" />

        <ImageView
            android:id="@+id/slot2"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_2" />

        <ImageView
            android:id="@+id/slot3"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_slots"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/small_slot1"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_1_small" />

        <ImageView
            android:id="@+id/small_slot2"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_3_small" />

        <ImageView
            android:id="@+id/small_slot3"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_2_small" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_slots"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/small_slot4"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_4_small" />

        <ImageView
            android:id="@+id/small_slot5"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_5_small" />

        <ImageView
            android:id="@+id/small_slot6"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_6_small" />
    </LinearLayout>


</RelativeLayout>